@model Desenhos
@{ViewData["Title"]="Inserção de Desenhos";}
<link rel="stylesheet" href="~/css/Desenhos/Inserir2.css">
<h2>Inserção de Desenhos</h2>
<form asp-action="Inserir" method="post">
    <fieldset>
        <p>@ViewBag.mensagem</p>
        <p><label asp-for="imagem">Busque a imagem do desenho:</label></p>
        <p><input asp-for="imagem" type="file" required></p>
        <p><label asp-for="frase">Titulo do desenho:</label></p>
        <p><input asp-for="frase" placeholder="Digite o titulo do desenho aqui" required></p>
        <p><a asp-action="Index" asp-controller="Home"><input type="button" value="Cancelar" id="cancelar"></a></p>
        <p><input type="submit" value="Inserir" id="inserir"></p>
        <p>@if(ViewBag.mensagem!=null){<a asp-action="Desenhos" asp-controller="Desenho">Voltar a pagina de desenhos</a>}</p>
    </fieldset>
</form>