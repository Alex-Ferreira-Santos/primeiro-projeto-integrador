@model Pedido
@{
    ViewData["Title"]="Exclusão de Pedidos";
    Layout = null;
}
<link rel="stylesheet" href="~/css/Pedido/Excluir2.css">
<h2>Exclusão de Pedidos</h2>
<form asp-action="Excluir" method="post">
    <fieldset>
        <p>
            <label asp-for="id">Selecione o id do pedido que deseja excluir: </label>
            <input asp-for="id" placeholder="digite o id aqui" required>
        </p>
        
        <p>
            <label asp-for="pedido">Digite o nome do pedido que deseja excluir: </label>
            <input asp-for="pedido" placeholder="digite o pedido aqui" required>
        </p>

        <p><a asp-action="Index" asp-controller="Home"><input type="button" value="Cancelar" id="cancelar"></a></p>

        <p><input type="submit" value="Excluir" id="excluir"></p>
        
    </fieldset>
</form>