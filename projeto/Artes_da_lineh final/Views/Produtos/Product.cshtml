@model ViewModel
<link rel="stylesheet" href="~/css/Produto/Product.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<section class="table-info d-flex container p-1 mb-3">
    <div id="carrossel" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
            
            <li data-target="#carrossel" data-slide-to="0" class="active"></li>
            @foreach (Produto item in Model.listaProduto)
            {          
                ViewData["Title"] = item.nome;
                @if(item.imagem1!=null){
                    <li data-target="#carrossel" data-slide-to="1"></li>
                    @if(item.imagem2!=null){
                        <li data-target="#carrossel" data-slide-to="2"></li>
                        @if(item.imagem3!=null){
                            <li data-target="#carrossel" data-slide-to="3"></li>
                            @if(item.imagem4!=null){
                                <li data-target="#carrossel" data-slide-to="4"></li>
                                @if(item.imagem5!=null){
                                    <li data-target="#carrossel" data-slide-to="5"></li>
                                }
                            }
                        }
                    }
                }          
            }    
        </ol>

        <div class="carousel-inner">
            @foreach(Produto item in Model.listaProduto){
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/imagens/@item.imagem" alt="imagem">          
                </div>
                @if(item.imagem1!=null){
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/imagens/@item.imagem1" alt="imagem">
                    </div>
                    @if(item.imagem2!=null){
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/imagens/@item.imagem2" alt="imagem">
                        </div>
                        @if(item.imagem3!=null){
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/imagens/@item.imagem3" alt="imagem">
                            </div>
                            @if(item.imagem4!=null){
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/imagens/@item.imagem4" alt="imagem">
                                </div>
                                @if(item.imagem5!=null){
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/imagens/@item.imagem5" alt="imagem">
                                    </div>
                                }
                            }
                        }
                    }
                }  
            }
        </div>

        <a class="carousel-control-prev" href="#carrossel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carrossel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

    <div class="d-block" id="descricao">
        @foreach (Produto item in Model.listaProduto)
        {
            <h1 id="nome">@item.nome</h1>
            <p id="preco">@item.preco</p>
            <a id="link" href="/Pedido/Encomendas?nome=@item.nome"><button id="Encomendar" class="border-0 btn btn-primary">Encomendar</button></a>
        }
    </div>
</section>