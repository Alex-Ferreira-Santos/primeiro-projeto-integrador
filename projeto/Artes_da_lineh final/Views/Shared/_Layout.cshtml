@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artes da Lineh</title>
    <link rel="stylesheet" href="~/css/site2.css">
</head>
<body>
    <header>
        <img src="/imagens/Logo.jpg" alt="Logo">
        <nav>
            <a asp-action="Index" asp-controller="Home">Home</a>|
            <a asp-action="Produtos" asp-controller="Produtos">Produtos</a>|
            <a asp-action="Desenhos" asp-controller="Desenho">Desenhos</a>|
            <a asp-action="Encomendas" asp-controller="pedido">Encomendas</a>|
            <a asp-action="FaleConosco" asp-controller="Home">Fale conosco</a>
            @if(Context.Session.GetInt32("idUsuarioUsuario")==1){<a asp-action="Menu" asp-controller="Home">Menu</a>}
        </nav>
        <a asp-action="Login" asp-controller="Usuario"><img src="/imagens/user1.jpg" alt="usuario" id="user"></a>
        @if(Context.Session.GetInt32("idUsuario")!=null){
        <span>Olá <b>@Context.Session.GetString("nomeUsuario")</b></span><a asp-controller="Usuario" asp-action="Logout"><h4 id="logout">Logout</h4></a>}
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer>
        <h2>Artes da Lineh &copy;</h2>
        <a href="https://www.facebook.com/artesdelineh/?hc_ref=ARSFqW15de8Fn1Jv2HpH1IASR_RcaJ8atTwVahsKLwSRu-Y5_Ijw4v1wlIwlH5XN_14&fref=nf" target="_blank">Facebook</a>
        <a href="https://instagram.com/artesdelineh?igshid=fqlr31zoyixy" target="_blank">Instagram</a>
        <a href="https://br.pinterest.com/alineilustracoes/" target="_blank">Pinterest</a>
    </footer>
</body>
</html>
