<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artes de Lineh - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/layout2.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        *{
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <section>
        <img src="~/imagens/menu-1.png" id="menu" alt="menu">
        <ul id="opcoes">
            <li class="categoria rotate-90"><img src="~/imagens/up-arrow.png" class="setaBaixo" id="desenho" alt="seta para baixo"> Desenhos</li>
            <ul>
                <li class="opcoes desenhos">Inserir</li>
                <li class="opcoes desenhos">Editar</li>
                <li class="opcoes desenhos">Excluir</li>
            </ul>
            <li class="categoria"><img src="~/imagens/up-arrow.png" alt="seta para baixo" class="setaBaixo" id="usuario"> Usu√°rios</li>
            <ul>
                <li class="opcoes usuarios">Inserir</li>
                <li class="opcoes usuarios">Editar</li>
                <li class="opcoes usuarios">Excluir</li>
            </ul>
            <li class="categoria"><img src="~/imagens/up-arrow.png" alt="seta para baixo" class="setaBaixo" id="produto"> Produtos</li>
            <ul>
                <li class="opcoes produtos">Inserir</li>
                <li class="opcoes produtos">Editar</li>
                <li class="opcoes produtos">Excluir</li>
            </ul>
            <li class="categoria"><img src="~/imagens/up-arrow.png" alt="seta para baixo" class="setaBaixo" id="encomenda"> Encomendas</li>
            <ul>
                <li class="opcoes listagem">Listagem</li>
            </ul>
        </ul>
    </section>
    <main role="main" class="container position-relative text-center w-100">
        @RenderBody()
    </main>
    
    <script src="~/js/layout.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>